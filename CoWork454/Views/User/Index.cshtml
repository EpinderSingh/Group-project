<section class="login-section">

    <div id="login" class="login-modal">

        <form class="login-modal-content animate" action="/User/" method="POST">>
            <div class="imgcontainer">
                <img src="~/images/CoWork454 Logo (white-background.png" alt="Avatar" class="avatar">
            </div>

            <div class="container">
                <div class="validation-summary">
                    @Html.ValidationSummary()
                </div>
                <label class="login-font" for="uname"><b>Username</b></label>
                <input type="text" placeholder="Enter Username" name="uname" required>

                <label class="login-font" for="psw"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="psw" required>

                <button class="login-btn" type="submit">Login</button>

            </div>

        </form>
    </div>
</section>
